def receive_file(message):
    # device's IP address
    SERVER_HOST = HOST_IP_3
    SERVER_PORT = 6001
    #BUFFER_SIZE = 4096  # receive 4096 bytes each time
    SEPARATOR = "<SEPARATOR>"

    #filename, filesize, contents = received.split(SEPARATOR)
    filename, filesize, contents = message.decode().split(SEPARATOR)
    # remove absolute path if there is
    filename = os.path.basename(filename)
    # convert to integer
    filesize = int(filesize)
    #todo: don't use filesz
    print(f"starting to write")
    # NOTE: test sending/receiving files greater than 4096 bytes large to see
    # if it works
    with open(filename, "wb") as f:

        # write to the file the bytes we just received
        f.write(contents.encode())

        print("File '" + filename + "' was successfully received.")
    print(f"done writing")

