def sendEmail(tcp_port):
    tcp_client(tcp_port, getEmailFromCredentials())


def killProcesses(procs):
    for p in procs:
        print("Terminating: {}".format(p.name))
        if p.is_alive():
            p.terminate()
            sleep(0.1)
        if not p.is_alive():
            p.join()


